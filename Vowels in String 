#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[1000];
    int i, vowels = 0;

    // Input string
    printf("Enter a string: ");
    scanf(" %[^\n]s", str); // read string including spaces

    // Count vowels
    for(i = 0; str[i] != '\0'; i++) {
        char ch = tolower(str[i]); // convert to lowercase for simplicity
        if(ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
            vowels++;
        }
    }

    // Display result
    printf("Number of vowels in the string: %d\n", vowels);

    return 0;
}
#include <stdio.h>

// Define structure
struct BusTicket {
    int ticketNo;
    char passengerName[50];
    char source[50];
    char destination[50];
    float fare;
};

int main() {
    struct BusTicket ticket;

    printf("Enter Ticket Number: ");
    scanf("%d", &ticket.ticketNo);

    printf("Enter Passenger Name: ");
    scanf("%s", ticket.passengerName);

    printf("Enter Source: ");
    scanf("%s", ticket.source);

    printf("Enter Destination: ");
    scanf("%s", ticket.destination);

    printf("Enter Fare: ");
    scanf("%f", &ticket.fare);

    printf("\n--- Bus Ticket Details ---\n");
    printf("Ticket Number    : %d\n", ticket.ticketNo);
    printf("Passenger Name   : %s\n", ticket.passengerName);
    printf("Source           : %s\n", ticket.source);
    printf("Destination      : %s\n", ticket.destination);
    printf("Fare             : %.2f\n", ticket.fare);

    return 0;
}
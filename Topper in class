#include <stdio.h>

int main() {
    int n, i;
    
    // Input number of students
    printf("Enter number of students: ");
    scanf("%d", &n);
    
    char names[n][50]; // Array to store student names
    int marks[n];      // Array to store student marks
    
    // Input names and marks
    for(i = 0; i < n; i++) {
        printf("Enter name of student %d: ", i + 1);
        scanf(" %[^\n]s", names[i]); // to read string with spaces
        printf("Enter marks of %s: ", names[i]);
        scanf("%d", &marks[i]);
    }
    
    // Find topper
    int maxMarks = marks[0];
    int topperIndex = 0;
    for(i = 1; i < n; i++) {
        if(marks[i] > maxMarks) {
            maxMarks = marks[i];
            topperIndex = i;
        }
    }
    
    // Display topper
    printf("\nTopper of the class is: %s with %d marks.\n", names[topperIndex], maxMarks);
    
    return 0;
}
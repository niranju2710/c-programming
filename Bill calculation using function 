#include <stdio.h>

// Function to calculate total bill
float calculateBill(float price, int quantity) {
    float total;
    total = price * quantity;
    return total;
}

int main() {
    float price, totalBill;
    int quantity;

    printf("Enter price of the item: ");
    scanf("%f", &price);

    printf("Enter quantity: ");
    scanf("%d", &quantity);

    totalBill = calculateBill(price, quantity);

    printf("Total Bill Amount = %.2f\n", totalBill);

    return 0;
}
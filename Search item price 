#include <stdio.h>
#include <string.h>

int main() {
    int n, i, found = 0;
    char item[50], items[100][50];
    float prices[100], price;

    printf("Enter number of items in the shop: ");
    scanf("%d", &n);

    // Input item names and prices
    for (i = 0; i < n; i++) {
        printf("Enter name of item %d: ", i + 1);
        scanf(" %[^\n]", items[i]);  // Read string with spaces

        printf("Enter price of %s: ", items[i]);
        scanf("%f", &prices[i]);
    }

    // Search for an item
    printf("\nEnter item name to search: ");
    scanf(" %[^\n]", item);

    for (i = 0; i < n; i++) {
        if (strcmp(item, items[i]) == 0) {  // Compare strings
            printf("Price of %s = %.2f\n", items[i], prices[i]);
            found = 1;
            break;
        }
    }

    if (!found) {
        printf("Item not found in the shop.\n");
    }

    return 0;
}
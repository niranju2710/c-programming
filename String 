#include <stdio.h>
#include <string.h>

int main() {
    char str[1000];
    int length;

    // Input string
    printf("Enter a string: ");
    scanf(" %[^\n]s", str); // reads string including spaces

    // Calculate length
    length = strlen(str);

    // Display result
    printf("The number of characters in the string is: %d\n", length);

    return 0;
}
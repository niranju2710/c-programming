#include <stdio.h>

int main() {
    int number, count = 0;

    printf("Enter a number: ");
    scanf("%d", &number);

    if (number == 0) {
        count = 1;  // 0 has 1 digit
    } else {
        if (number < 0) {
            number = -number;  // Convert negative number to positive
        }

        while (number != 0) {
            number = number / 10;  // Remove last digit
            count++;
        }
    }

    printf("Number of digits = %d\n", count);

    return 0;
}
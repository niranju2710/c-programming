#include <stdio.h>
#include <string.h>

int main() {
    char str[1000], reversed[1000];
    int length, i, j;

    // Input string
    printf("Enter a string: ");
    scanf(" %[^\n]s", str); // read string including spaces

    length = strlen(str); // get string length

    // Reverse the string
    j = 0;
    for(i = length - 1; i >= 0; i--) {
        reversed[j++] = str[i];
    }
    reversed[j] = '\0'; // null-terminate the reversed string

    // Display result
    printf("Reversed string: %s\n", reversed);

    return 0;
}
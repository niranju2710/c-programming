#include <stdio.h>

int main() {
    char name[50];
    float basic, hra, da, tax, grossSalary, netSalary;

    printf("Enter employee name: ");
    scanf(" %[^\n]", name);  // to read full name with spaces

    printf("Enter Basic Salary: ");
    scanf("%f", &basic);

    printf("Enter HRA (House Rent Allowance): ");
    scanf("%f", &hra);

    printf("Enter DA (Dearness Allowance): ");
    scanf("%f", &da);

    printf("Enter Tax Deduction: ");
    scanf("%f", &tax);

    grossSalary = basic + hra + da;
    netSalary = grossSalary - tax;

    printf("\n------ Salary Slip ------\n");
    printf("Employee Name : %s\n", name);
    printf("Basic Salary  : %.2f\n", basic);
    printf("HRA           : %.2f\n", hra);
    printf("DA            : %.2f\n", da);
    printf("Gross Salary  : %.2f\n", grossSalary);
    printf("Tax Deduction : %.2f\n", tax);
    printf("Net Salary    : %.2f\n", netSalary);
    printf("-------------------------\n");

    return 0;
}
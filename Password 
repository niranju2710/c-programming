#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char password[100];
    int i;
    int hasUpper = 0, hasLower = 0, hasDigit = 0, hasSpecial = 0;

    // Input password
    printf("Enter your password: ");
    scanf(" %[^\n]s", password); // read string with spaces if any

    int length = strlen(password);

    // Check each character
    for(i = 0; i < length; i++) {
        if(isupper(password[i])) {
            hasUpper = 1;
        } else if(islower(password[i])) {
            hasLower = 1;
        } else if(isdigit(password[i])) {
            hasDigit = 1;
        } else if(password[i] == '@' || password[i] == '#' || password[i] == '$' || 
                  password[i] == '%' || password[i] == '&' || password[i] == '!') {
            hasSpecial = 1;
        }
    }

    // Check all conditions
    if(length >= 8 && hasUpper && hasLower && hasDigit && hasSpecial) {
        printf("Password is valid.\n");
    } else {
        printf("Password is invalid.\n");
        printf("Password must have at least 8 characters, including uppercase, lowercase, digit, and special character.\n");
    }

    return 0;
}
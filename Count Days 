#include <stdio.h>

int main() {
    int days, i, workedDay, count = 0;

    printf("Enter number of days in the month: ");
    scanf("%d", &days);

    for (i = 1; i <= days; i++) {
        printf("Did you work on day %d? (1 = Yes, 0 = No): ", i);
        scanf("%d", &workedDay);

        if (workedDay == 1) {
            count++;
        }
    }

    printf("\nTotal number of days worked = %d\n", count);

    return 0;
}
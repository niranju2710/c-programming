#include <stdio.h>

// Function to calculate average
float calculateAverage(int a, int b, int c) {
    float avg;
    avg = (a + b + c) / 3.0;
    return avg;
}

int main() {
    int num1, num2, num3;
    float average;

    printf("Enter three numbers: ");
    scanf("%d %d %d", &num1, &num2, &num3);

    average = calculateAverage(num1, num2, num3);

    printf("Average = %.2f\n", average);

    return 0;
}